# Anthony's Musings - Environment Configuration

# Database Configuration - UPDATED to point to your existing database
DATABASE_PATH=/Users/tikbalang/anthonys-musings-api/database/anthonys_musings.db
DATABASE_VOLUME_PATH=./data/database

# API Configuration
SECRET_KEY=your-secret-key-here-change-this-in-production
DEBUG=true
CORS_ORIGINS=http://localhost:3001,http://localhost:8001

# Content Configuration
MAX_CONTENT_LENGTH=10000000
EXPLICIT_CONTENT_WARNING=true

# Redis Configuration (optional)
REDIS_PASSWORD=your-redis-password-here

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_VOLUME_PATH=./data/backups

# SSL Configuration (production)
SSL_CERT_PATH=./ssl/cert.pem
SSL_KEY_PATH=./ssl/key.pem

# Monitoring (optional)
PROMETHEUS_ENABLED=false
MONITORING_PORT=9090

# Application Settings
NODE_ENV=development
API_BASE_URL=http://localhost:8001

# Docker Configuration
COMPOSE_PROJECT_NAME=anthonys-musings
DOCKER_BUILDKIT=1

# Development Settings
HOT_RELOAD=true
LOG_LEVEL=debug

# Production Settings (uncomment for production)
# NODE_ENV=production
# DEBUG=false
# LOG_LEVEL=info
# CORS_ORIGINS=https://yourdomain.com
